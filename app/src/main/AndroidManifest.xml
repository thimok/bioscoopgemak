<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="informatica.groep1.bioscoopapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/android_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/android_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.MovieActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.MovieDetailed"
            android:label="@string/title_activity_movie_detailed"
            android:parentActivityName=".presentation.MovieActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.ShowActivity"
            android:label="Bioscoop app"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.ShowDetailedActivity"
            android:label="@string/title_activity_show_detailed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.ReservationActivity"
            android:label="@string/title_activity_reservation"
            android:parentActivityName=".presentation.ShowDetailedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="informatica.groep1.bioscoopapp.presentation.ShowDetailedActivity" />
        </activity>
        <activity
            android:name=".presentation.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SeatReservationActivity"
            android:label="@string/title_activity_seat_reservation"
            android:parentActivityName=".presentation.ReservationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="informatica.groep1.bioscoopapp.presentation.ReservationActivity" />
        </activity>
    </application>

</manifest>